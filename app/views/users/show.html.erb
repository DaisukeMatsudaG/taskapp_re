<%#= link_to 'all' ,root_path,class: "btn btn-info"%>
<%#= link_to 'todo',root_path(status: 'todo'),class: "btn btn-info"%>
<%#= link_to 'doing',root_path(status: 'doing'),class: "btn btn-info"%>
<%#= link_to 'done',root_path(status: 'done'),class: "btn btn-info"%>

<div class="d-flex bd-highlight">
    <div class="p-2 w-100 bd-highlight">
      <h3 class="bg-secondary text-center rounded-pill text-white">
      ToDo一覧<br>
      <% if params[:deadline].present? %>
          <%= "指定日 '#{params[:deadline]}'"%>
      <% end %>

      <% if params[:keyword].present? %>
          <%= "検索ワード '#{params[:keyword]}'"%>
      <% end %>
      </h3>

      <%= render 'commons/tasks' %>
    </div>
  <div class="p-4 flex-shrink-1 bd-highlight">


    <div class="mb-2 p-4 bg-secondary rounded">
    <h5 class="text-white">【検索フォーム】</h5>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <i class="h6 text-white fa-solid fa-calendar-days"></i>  <%= f.date_select :deadline , include_blank: true,use_month_numbers: true, selected: Date.today%><br>
      <!--ここでチェックボックスなどいれればいいのではないかな？-->
      <br>
      <div class="text-white">検索ワード</div>
      <%= f.text_field :keyword %>
      <br>
      <%= f.submit "検索" %>
      <i class="h6 text-white fas fa-search"></i>
      <% end %>
      <%= link_to '検索解除', root_path, class: "text-white"%>

    </div>

    <div class="mb-2 p-4 bg-secondary rounded">
    <h5 class="text-white">【ToDo追加フォーム】</h5>
      <%= form_with model: @task do |f|%>
          <i class="h6 text-white fa-solid fa-calendar-days"></i> <%= f.date_select :deadline, use_month_numbers: true %>
          <br>
          <div class="text-white"><i class="fas fa-stopwatch"></i>/minutes</div>
          <%= f.select :estimated_time, {"15m"=> "15","30分"=> "30","45分"=> "45", "60分"=> "60", "90分"=> "90","120分"=> "120","180分"=> "180"},include_blank: true%>
          <br>
          <div class="text-white">タスク内容</div>
          <%= f.text_field :content %>
          <%= f.submit 'ToDoを追加',class: "btn btn-primary" %>
          <input type="submit" name="commit" value="ToDoを追加" class="btn btn-primary" data-disable-with="ToDoを追加">
      <% end %>
      <h3><i class="fas fa-plus-circle"></i></h3>
    </div>

  </div>
</div>

<%#ページネーション用の記述%>
<h3 class="text-center"><%= paginate @tasks %></h3>